{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Backend",
      "program": "${workspaceFolder}/packages/backend/src/index.ts",
      "cwd": "${workspaceFolder}/packages/backend",
      "env": {
        "PORT": "4000"
      },
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Backend Tests",
      "program": "bun",
      "args": ["test"],
      "cwd": "${workspaceFolder}/packages/backend",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Dev Orchestrator",
      "program": "${workspaceFolder}/scripts/dev.ts",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "Debug Current File",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    }
  ]
}
