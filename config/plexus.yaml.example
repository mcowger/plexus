# Plexus Configuration Example
# Copy this file to plexus.yaml and modify as needed

# Database Configuration (REQUIRED)
# URI format: sqlite://<path> or postgres://<user>:<pass>@<host>:<port>/<db>
database:
  connection_string: sqlite://./config/usage.sqlite

  # Examples:
  # ---------
  # SQLite file (default):
  #   connection_string: sqlite://./config/usage.sqlite
  #
  # SQLite in-memory (for testing only):
  #   connection_string: sqlite://:memory:
  #
  # PostgreSQL local:
  #   connection_string: postgres://user:password@localhost:5432/plexus
  #
  # PostgreSQL cloud (Neon, Supabase, etc.):
  #   connection_string: postgres://user:password@ep-xxx.region.neon.tech/plexus?sslmode=require
  #
  # PostgreSQL with connection pool:
  #   connection_string: postgres://user:password@host:5432/database?max=10&timeout=30s

adminKey: change-this-in-production

keys:
  testkey:
    secret: sk-SuperSecretValue
    comment: This is a test key

providers:
  # Provider configurations here...
  # See the main plexus.yaml for full examples

models:
  # Model configurations here...
  # See the main plexus.yaml for full examples