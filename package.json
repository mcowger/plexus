{
  "name": "plexus2",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --watch packages/backend/src/index.ts",
    "test": "bun test",
    "typecheck": "bun --workspaces run typecheck",
    "start": "NODE_ENV=production bun packages/backend/src/index.ts",
    "compile:macos": "bun build packages/backend/src/index.ts --compile --target bun-darwin-arm64 --outfile dist/plexus2-macos",
    "compile:linux": "bun build packages/backend/src/index.ts --compile --target bun-linux-x64-modern --outfile dist/plexus2-linux-x64",
    "compile:windows": "bun build packages/backend/src/index.ts --compile --target bun-win-x64 --outfile dist/plexus2-windows-x64.exe",
    "compile:linux-arm64": "bun build packages/backend/src/index.ts --compile --target bun-linux-arm64 --outfile dist/plexus2-linux-arm64",
    "compile:all": "bun run compile:macos && bun run compile:linux && bun run compile:windows && bun run compile:linux-arm64"
  },
  "devDependencies": {
    "@microsoft/fetch-event-source": "^2.0.1",
    "@types/bun": "latest",
    "bun-plugin-tailwind": "^0.1.2",
    "bun-types": "^1.3.5"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "yaml": "^2.8.2"
  }
}
