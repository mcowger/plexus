{
  "name": "plexus2",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --watch packages/backend/src/index.ts",
    "dev:frontend": "cd packages/frontend && bun src/index.html",
    "test": "bun test",
    "test:backend": "bun test packages/backend",
    "typecheck": "bun run typecheck:backend && bun run typecheck:frontend",
    "typecheck:backend": "cd packages/backend && bun tsc --noEmit",
    "typecheck:frontend": "cd packages/frontend && bun tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-plugin-tailwind": "^0.1.2",
    "bun-types": "^1.3.5",
    "tailwindcss": "^4.1.18"
  }
}
